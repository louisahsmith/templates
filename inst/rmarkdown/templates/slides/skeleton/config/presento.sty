% frame counter
\newcounter{totalfr}
\newcounter{pageval}
\setcounter{pageval}{\insertframenumber}
\setbeamertemplate{footline}{
  \ifnum\inserttotalframenumber=0
    \setcounter{totalfr}{1}
  \else
     \setcounter{totalfr}{\inserttotalframenumber}
  \fi
  \hfill{
    \tikz{
      \filldraw[fill=colorgreen!30, draw=colorgreen!30]  (0,0) -- (0.2,0) arc (0:{(\value{framenumber})*(360/(\value{totalfr}))}:0.2) -- (0,0);
      \node at (0,0) {\normalsize \color{colorgreen}\tiny{\insertframenumber}};
    }
  }
  \hspace{2em}
  \vspace*{1em}
}

